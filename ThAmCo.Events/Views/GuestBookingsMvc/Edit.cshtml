@model ThAmCo.Events.Data.GuestBooking

@{
    ViewData["Title"] = "Edit";
}
@*<link rel="stylesheet" href="~/css/guestBookings.css"/>*@

<h2>Guest Booking | Edit</h2>
<div>
    <a asp-action="Index">Back to GuestBooking</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="EventId" />
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Attended" /> @Html.DisplayNameFor(model => model.Attended)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="SAVE" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
