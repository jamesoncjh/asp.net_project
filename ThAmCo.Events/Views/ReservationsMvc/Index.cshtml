@model IEnumerable<ThAmCo.Venues.Data.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h2>Reservation List</h2>

<p>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to Homepage</a> |
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Availability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhenMade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Availability.VenueCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhenMade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Reference">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Reference">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Reference">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
