@model ThAmCo.Catering.Data.FoodBooking

@{
    ViewData["Title"] = "Create";
}

<h2>Food Booking | Create</h2>
<div>
    <a asp-action="Index">Back to FoodBooking</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FoodBookingId" class="control-label"></label>
                <input asp-for="FoodBookingId" class="form-control" />
                <span asp-validation-for="FoodBookingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuId" class="control-label"></label>
                <select asp-for="MenuId" class ="form-control" asp-items="ViewBag.MenuId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="CREATE" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
